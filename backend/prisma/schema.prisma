generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UpdatedBy {
  TRAINER
  CLIENT
  SYSTEM
}

enum ExerciseCategory {
  UPPER
  LOWER
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  role      String   @default("TRAINER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clientProfiles ClientProfile[] @relation("ClientUser")
  clients        ClientProfile[] @relation("TrainerUser")
  programs       Program[]
}

model ClientProfile {
  id String @id @default(uuid())

  // required: back-ref for Program.client
  programs Program[]

  // required relations you already had
  user   User   @relation("ClientUser", fields: [userId], references: [id])
  userId String

  trainer   User   @relation("TrainerUser", fields: [trainerId], references: [id])
  trainerId String

  name     String
  notes    String?
  archived Boolean @default(false)

  @@index([userId])
}

model Program {
  id    String  @id @default(uuid())
  title String?

  // Program belongs to one ClientProfile
  client   ClientProfile @relation(fields: [clientId], references: [id])
  clientId String

  // Program belongs to one TRAINER (User)
  trainer   User   @relation(fields: [trainerId], references: [id])
  trainerId String

  startDate DateTime @default(now())
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  weeks Week[]

  @@index([clientId])
  @@index([trainerId])
}

model Week {
  id String @id @default(uuid())

  program   Program @relation(fields: [programId], references: [id])
  programId String

  weekNumber Int      @default(1)
  isDeload   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  rows Row[]
  // If each program can have only one of each weekNumber, enforce:
  // @@unique([programId, weekNumber])

  @@index([programId, weekNumber])
}

model Row {
  id String @id @default(uuid())

  week      Week   @relation(fields: [weekId], references: [id])
  weekId    String
  dayNumber Int

  // Trainer fields
  exercise      Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId    String
  sets          Int
  weightLbs     Int
  targetRepsMin Int
  targetRepsMax Int
  rir           Int
  restSec       Int

  // Client fields
  actualReps Int[]
  notes      String? @db.Text

  // Audit
  updatedBy UpdatedBy @default(SYSTEM)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([weekId, dayNumber])
  @@index([exerciseId])
}

model Exercise {
  id        String           @id @default(uuid())
  name      String           @unique
  category  ExerciseCategory
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  rows      Row[]

  @@index([name])
}
