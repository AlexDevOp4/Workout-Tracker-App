generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TRAINER
  CLIENT
}

enum UpdatedBy {
  TRAINER
  CLIENT
  SYSTEM
}

enum ExerciseCategory {
  UPPER
  LOWER
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  role      Role     @default(TRAINER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // If this user is a client, they have exactly one ClientProfile
  clientProfile ClientProfile? @relation("ClientUser")

  // If this user is a trainer, they have exactly one TrainerProfile
  trainerProfile TrainerProfile? @relation("TrainerProfileUser")

  // If this user is a trainer, these are the clients they own
  clients ClientProfile[] @relation("TrainerUser")

  // Programs this user owns as trainer
  programs Program[]
}

model TrainerProfile {
  id String @id @default(uuid())

  // The trainer user account
  user   User   @relation("TrainerProfileUser", fields: [userId], references: [id])
  userId String @unique

  firstName String
  lastName  String
  bio       String?
  archived  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model ClientProfile {
  id String @id @default(uuid())

  // The client user account
  user   User   @relation("ClientUser", fields: [userId], references: [id])
  userId String @unique

  // The trainer (User) that owns this client
  trainer   User   @relation("TrainerUser", fields: [trainerId], references: [id])
  trainerId String

  firstName String
  lastName  String
  notes     String?
  archived  Boolean @default(false)

  // All programs for this client
  programs Program[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([trainerId])
}

model Program {
  id    String  @id @default(uuid())
  title String?

  // Program belongs to one ClientProfile
  client   ClientProfile @relation(fields: [clientId], references: [id])
  clientId String

  // Program belongs to one TRAINER (User)
  trainer   User   @relation(fields: [trainerId], references: [id])
  trainerId String

  startDate DateTime @default(now())
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  weeks Week[]

  @@index([clientId])
  @@index([trainerId])
}

model Week {
  id String @id @default(uuid())

  program   Program @relation(fields: [programId], references: [id])
  programId String

  weekNumber Int      @default(1)
  isDeload   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  rows Row[]
  // If each program can have only one of each weekNumber, enforce:
  // @@unique([programId, weekNumber])

  @@index([programId, weekNumber])
}

model Row {
  id String @id @default(uuid())

  week      Week   @relation(fields: [weekId], references: [id])
  weekId    String
  dayNumber Int

  // Trainer fields
  exercise      Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId    String
  sets          Int
  weightLbs     Int
  targetRepsMin Int
  targetRepsMax Int
  rir           Int
  restSec       Int

  // Client fields
  actualReps Int[]
  notes      String? @db.Text

  // Audit
  updatedBy UpdatedBy @default(SYSTEM)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([weekId, dayNumber])
  @@index([exerciseId])
}

model Exercise {
  id        String           @id @default(uuid())
  name      String           @unique
  category  ExerciseCategory
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  rows      Row[]

  @@index([name])
}
