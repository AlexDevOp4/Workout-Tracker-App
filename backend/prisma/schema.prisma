generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  clerkId       String          @unique
  email         String          @unique
  role          String          @default("TRAINER")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @default(now())
  clientProfile ClientProfile?  @relation(name: "ClientUser")
  clients       ClientProfile[] @relation("TrainerUser")
}

model ClientProfile {
  id        String  @id @default(uuid())
  user      User    @relation(name: "ClientUser", fields: [userId], references: [id])
  userId    String  @unique
  trainer   User    @relation(name: "TrainerUser", fields: [trainerId], references: [id])
  trainerId String  @unique
  name      String
  notes     String?
  archived  Boolean @default(false)
}
